<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           
            android:orientation="vertical" >
   <include layout="@layout/title_back"/>

            <RelativeLayout
                android:id="@+id/foodintroduce_cookbooklistfood_RL"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#FFFFFF" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentTop="true"
                    android:background="#000000" />
                 <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentTop="true"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/cooklook_food" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView4"
                    android:layout_centerHorizontal="true"
                    android:text="西芹牛柳"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView4"
                    android:layout_alignLeft="@+id/textView1"
                    android:text="被点12次" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="19dp"
                    android:src="@drawable/cookbook_list_hotpepper" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_alignLeft="@+id/imageView7"
                    android:src="@drawable/cookbook_list_plus" />

            </RelativeLayout>
<FrameLayout
                     android:layout_width="fill_parent"
                     android:layout_height="0.1dp"
                     android:layout_alignParentTop="true"
                     android:background="#000000" />
            <TextView
                android:id="@+id/foodintroduce_line_TV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#cccccc"
                 />

             <RelativeLayout
                 android:id="@+id/foodintroduce_introduce1_RL"
                 android:layout_width="match_parent"
                 android:layout_height="200dp"
                 android:background="#FFFFFF" >

                 <FrameLayout
                     android:layout_width="fill_parent"
                     android:layout_height="0.1dp"
                     android:layout_alignParentTop="true"
                     android:background="#000000" />
                 <FrameLayout
                     android:layout_width="fill_parent"
                     android:layout_height="0.1dp"
                     android:layout_alignParentTop="true"
                     android:background="#000000" />

                 <TextView
                     android:id="@+id/textView4"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentTop="true"
                     android:layout_centerHorizontal="true"
                     android:text="菜品介绍"
                     android:textSize="17sp"
                     android:textAppearance="?android:attr/textAppearanceLarge" />

                 <TextView
                     android:id="@+id/textView2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:layout_below="@+id/textView4"
                     android:text="西芹牛柳是家常菜菜谱之一，以西芹为制作主料，西芹牛柳的烹饪技巧以炒菜为主" />

                 <ImageView
                     android:id="@+id/imageView1"
                     android:layout_width="250dp"
                     android:layout_height="140dp"
                     android:layout_below="@+id/textView2"
                     android:layout_centerHorizontal="true"
                     android:background="@drawable/foodintroduce_bigfood" />

             </RelativeLayout>

             <FrameLayout
                     android:layout_width="fill_parent"
                     android:layout_height="0.1dp"
                     android:layout_alignParentTop="true"
                     android:background="#000000" />
            <TextView
                android:id="@+id/foodintroduce_line2_TV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#cccccc"
                
                 />


             <RelativeLayout
                android:id="@+id/foodintroduce_list1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#FFFFFF" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentTop="true"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="菜品主料"
                    android:textSize="15sp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/foodintroduce_list2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="0dp"
                android:background="#FFFFFF" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentTop="true"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="牛肉" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17dp"
                    android:src="@drawable/foodintroduce_bag" />

            </RelativeLayout>
            
             <RelativeLayout
                 android:id="@+id/foodintroduce_list3"
                 android:layout_width="match_parent"
                 android:layout_height="35dp"
                 android:background="#FFFFFF" >

                 <FrameLayout
                     android:layout_width="fill_parent"
                     android:layout_height="0.1dp"
                     android:layout_alignParentTop="true"
                     android:background="#000000" />

                 <TextView
                     android:id="@+id/textView7"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                     android:layout_centerVertical="true"
                     android:text="芹菜" />

                 <ImageView
                     android:id="@+id/imageView3"
                     android:layout_width="25dp"
                     android:layout_height="25dp"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true"
                     android:layout_marginRight="18dp"
                     android:src="@drawable/foodintroduce_five_star" />

             </RelativeLayout>
             
             <RelativeLayout
                 android:id="@+id/foodintroduce_list4"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#FFFFFF" >

                 <FrameLayout
                     android:layout_width="fill_parent"
                     android:layout_height="0.1dp"
                     android:layout_alignParentTop="true"
                     android:background="#000000" />

                
             </RelativeLayout>

             

</LinearLayout>

</FrameLayout>
