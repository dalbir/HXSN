<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dlbg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/loginScannerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/dl_er" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8bc111"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:text="扫描二维码登录" />
   
    </LinearLayout>

    <EditText
        android:id="@+id/loginPhoneET"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:drawablePadding="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="账号"
        android:inputType="text"
        android:background="@drawable/rounded_edittext" 
        android:drawableLeft="@drawable/user"
        android:textColorHint="#cccccc" >

        <requestFocus />
    </EditText>

    <com.hxsn.intelliwork.myviews.ClearEditText
        android:id="@+id/loginPwdET"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:drawablePadding="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/rounded_edittext" 
        android:drawableLeft="@drawable/pass"
        android:drawableRight="@drawable/help"
        android:hint="密码"
        android:inputType="textPassword"
        android:textColorHint="#cccccc" />



    <Button
        android:id="@+id/loginBtn"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="登录"
        android:background="@drawable/butbg"
        android:textColor="#ffffff"
        android:textSize="19sp" />


</LinearLayout>