<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="15dp"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/wifi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="网络信息提示"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/wifi_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifi_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="没有连接网络哦亲，如果要继续，请先设置网络"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifi_info"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" >

        <Button
            android:id="@+id/wifi_setBtn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="设置"
            android:textColor="#ffffff" 
    android:background="@drawable/butbg" />

        <Button
            android:id="@+id/wifi_cancleBtn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:text="退出"
            android:textColor="#ffffff" 
    android:background="@drawable/butbg" />

    </LinearLayout>

</RelativeLayout>
