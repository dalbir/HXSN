<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/bg_color" >

    <TextView
        android:id="@+id/offline_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="温馨提示"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/offline_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offline_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="您的账号已在异地登陆，请您确保账户密码安全"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offline_message"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" >

        <Button
            android:id="@+id/offline_setting"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="重新登陆"
            android:textColor="#ffffff" 
            android:background="@drawable/butbg" />

        <Button
            android:id="@+id/offline_close"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:text="退出"
            android:textColor="#ffffff" 
            android:background="@drawable/butbg"  />

    </LinearLayout>

</RelativeLayout>
