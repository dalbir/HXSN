<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="15dp" >

    <TextView
        android:id="@+id/out_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="网络异常"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/out_time_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/out_time_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="当前网络连接不稳定，加载视频音频资源失败"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/out_time_message"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" >

        <Button
            android:id="@+id/out_time_setting"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="重新加载"
            android:textColor="#ffffff"
            android:background="@drawable/butbg"
             />

        <Button
            android:id="@+id/out_time_close"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:text="取消"
            android:textColor="#ffffff" 
            android:background="@drawable/butbg"
            />

    </LinearLayout>

</RelativeLayout>
