<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#2774cc"
        android:gravity="center_vertical" >
        
        <Button 
            android:id="@+id/expert_search_back_btn"
            android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:background="@drawable/back_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
        	android:textColor="#ffffff"
            android:text="病害查询" />
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/expert_disease_product_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="农产品种类" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical|right" >

            <TextView
                android:id="@+id/expert_disease_product_one"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/expert_disease_navigation_blue"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="1" />

            <TextView
                android:id="@+id/expert_disease_product_two"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/expert_disease_navigation_gray"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="2" />

            <TextView
                android:id="@+id/expert_disease_product_three"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/expert_disease_navigation_gray"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="3" />
            
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/expert_disease_product_listview"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
