<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efeff4" >
    
    <RelativeLayout
        android:id="@+id/alarm_content_actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#2774cc"
        android:gravity="center_vertical" >
        
        <Button 
            android:id="@+id/alarm_content_back_btn"
            android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:background="@drawable/back_button"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
        	android:textColor="#ffffff"
            android:text="报警详情" />
        
    </RelativeLayout>

    <ScrollView android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#efeff4"
	    android:paddingTop="10.0dip">
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	    	android:orientation="vertical">
		    <TextView android:id="@+id/tv_alarm_content_title"
		        android:layout_width="match_parent"
		        android:layout_height="40.0dip"
		        android:layout_marginTop="10.0dip"
		        android:gravity="center"
		        android:text="基地网关报警"
		        android:textColor="#fe545c"
		        android:textSize="25.0dip"/> 
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1px"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"
		        android:layout_marginTop="10dp"
		        android:background="#c3c3c3"/>
		    <LinearLayout android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10.0dip"
		        android:paddingLeft="20.0dip"
		        android:paddingRight="10.0dip"
		        android:orientation="vertical">
		        
			    <RelativeLayout android:layout_width="match_parent"
			        android:layout_height="wrap_content">
			        <TextView android:id="@+id/tv_alarm_content_jidi_title"
			            android:layout_height="30.0dip"
			            android:layout_width="100.0dip"
			            android:gravity="center_vertical"
			            android:text="所属基地："
			            android:textColor="#000000"
			            android:textSize="20.0dip"/>
			        <TextView android:id="@+id/tv_alarm_content_jidi"
			            android:layout_width="match_parent"
			            android:layout_height="30.0dip"
			            android:layout_toRightOf="@id/tv_alarm_content_jidi_title"
			            android:gravity="left|center_vertical"
			            android:text="马家坞基地"
			            android:singleLine="true"
			            android:textColor="#000000"
			            android:textSize="20.0dip"/>
			        
			        <TextView android:id="@+id/tv_alarm_content_dapen_title"
			            android:layout_height="30.0dip"
			            android:layout_width="100.0dip"
			            android:layout_below="@id/tv_alarm_content_jidi_title"
			            android:gravity="center_vertical"
			            android:text="所属大棚："
			            android:textColor="#000000"
			            android:textSize="20.0dip"/>
			        <TextView android:id="@+id/tv_alarm_content_dapen"
			            android:layout_width="match_parent"
			            android:layout_height="30.0dip"
			            android:layout_below="@id/tv_alarm_content_jidi"
			            android:layout_toRightOf="@id/tv_alarm_content_dapen_title"
			            android:gravity="left|center_vertical"
			            android:text="大棚一号"
			            android:singleLine="true"
			            android:textColor="#000000"
			            android:textSize="20.0dip"/>
			    </RelativeLayout> 
			       
			    <RelativeLayout android:layout_width="match_parent"
			        android:layout_height="wrap_content">
			        <TextView android:id="@+id/tv_alarm_content_level_title"
			            android:layout_width="60.0dip"
			            android:layout_height="30.0dip"
			            android:gravity="center_vertical"
			            android:text="等级："
			            android:textColor="#000000"
			            android:textSize="20.0dip"/>
			        <TextView android:id="@+id/tv_alarm_content_level"
			            android:layout_width="70.0dip"
			            android:layout_height="30.0dip"
			            android:gravity="center_vertical"
			            android:layout_toRightOf="@id/tv_alarm_content_level_title"
			            android:text="1"
			            android:textColor="#000000"
			            android:textSize="20.0dip"/>
			        
			        <TextView android:id="@+id/tv_alarm_content_time_title"
			            android:layout_width="60.0dip"
			            android:layout_height="30.0dip"
			            android:gravity="center_vertical"
			            android:layout_below="@id/tv_alarm_content_level_title"
			            android:text="时间："
			            android:textColor="#000000"
			            android:textSize="20.0dip"/>
			        <TextView android:id="@+id/tv_alarm_content_time"
			            android:layout_width="match_parent"
			            android:layout_height="30.0dip"
			            android:layout_below="@id/tv_alarm_content_level"
			            android:layout_toRightOf="@id/tv_alarm_content_time_title"
			            android:gravity="center_vertical"
			            android:text="2013-7-3 16:36:25"
			            android:textColor="#000000"
			            android:textSize="20.0dip"/>
			        
			    </RelativeLayout>  
		    </LinearLayout>   
		    
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1px"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"
		        android:layout_marginTop="10dp"
		        android:background="#c3c3c3"/>
		        
		    <TextView android:id="@+id/tv_alarm_content_content"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5.0dip"
		        android:paddingTop="5.0dip"
		        android:paddingBottom="5.0dip"
		        android:paddingLeft="20.0dip"
		        android:paddingRight="10.0dip"
		        android:text="你的大棚出现了高温预警，建议你查看网关及相关设备，大棚是否有遮盖物。请保障大棚通风。如出现问题，与本公司无关"
		        android:textColor="#626262"
		        android:textSize="20.0dip"/>   
	    </LinearLayout>

    </ScrollView>
</LinearLayout>