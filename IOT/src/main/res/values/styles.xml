<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="main_tab_bottom">
	    <item name="android:textSize">@dimen/bottom_tab_font_size</item>
        <item name="android:textColor">@drawable/bottom_textcolor</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/bottom_background</item>
        <item name="android:paddingTop">@dimen/bottom_tab_padding_up</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/bottom_tab_padding_drawable</item>
        <item name="android:layout_weight">1.0</item>
	</style>
	<style name="top_bar_title">
	    <item name="android:textSize">28dip</item>
	    <item name="android:textColor">#ffffffff</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_centerHorizontal">true</item>
	    <item name="android:singleLine">true</item>
	    <item name="android:layout_width">140dip</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:ellipsize">marquee</item>
	</style>
	
	<style name="basestyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="wrapstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
     <style name="bar_textview" parent="@style/wrapstyle">
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
	</style>
    <style name="widthfull" parent="@style/basestyle">
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="heightfull" parent="@style/basestyle">
        <item name="android:layout_width">wrap_content</item>
    </style>
	
	<style name="device_data_textview" parent="@style/widthfull">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
    </style>
    
	<style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">  
   		<item name="android:button">@drawable/checkbox_style</item>  
	</style>  
	
	<style name="DrawerCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">  
   		<item name="android:button">@drawable/drawer_checkbox_style</item>  
	</style>  
	
	<style name="settings_textview">
	    <item name="android:textSize">20sp</item>
	    <item name="android:textColor">#000000</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:background">#ffffff</item>
	</style>
	
	<style name="settings_modify_textview">
	    <item name="android:textSize">20sp</item>
	    <item name="android:textColor">#000000</item>
	</style>
	<style name="customProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
        <item name="android:layout_width">32dip</item>
        <item name="android:layout_height">35dip</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>